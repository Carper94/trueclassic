<div
  class='section-wrapper section-with-link container{{ section.settings.section_class }}'
  aria-label='Section With Link'
>
  <div class='section-with-link-wrapper' aria-labelledby='section-with-link-title'>
    <a
      href='{{ section.settings.collection_link }}'
      title='{{ section.settings.collection_name }}'
      class='section-link'
    >
      <span>{{- section.settings.collection_name -}}</span>
      {% render 'icon-arrow-right' %}
    </a>
  </div>
</div>
{% style %}
  .section-with-link {
    background: #fafafa;
    background-color: {{ section.settings.background_color }};
    height: 14vh;
  }
  .section-with-link-wrapper {
    display: grid;
    place-items: center;
    height: 100%;
  }

  .section-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    text-transform: uppercase;
    letter-spacing: 1.3px;
    font-size: 16px;
    font-weight: 600;
  }
{% endstyle %}

{% schema %}
{
  "name": "Section With Link",
  "class": "section-with-l",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "section_class",
      "label": "Section CSS Class"
    },
    {
      "type": "text",
      "id": "collection_name",
      "label": "Label"
    },
    {
      "type": "url",
      "id": "collection_link",
      "label": "Link to"
    }
  ],
  "presets": [
    {
      "name": "Section With Link"
    }
  ]
}
{% endschema %}
