            background-color: {{ section.settings.overlay_color }};
            opacity: {{ section.settings.overlay_opacity }};
            top: 0;
            left: 1rem;
            width: calc(100% - 2rem);
            height: 100%;
            z-index: 1;
          }
        {% if section.settings.overlay_is_mobile %} } {% endif %}
