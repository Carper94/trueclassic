              | image_url: width: 1500
              | image_tag:
                width: image_md.width,
                height: image_md_height,
                class: image_md_class,
                sizes: sizes_md,
                loading: loading,
                widths: '165, 265, 360, 535, 750, 1070, 1500, 1780, 2000, 3000',
                alt: image_md.alt
              | escape
            }}
          </div>
        {% endunless %}
        {% comment %}theme-check-enable ImgLazyLoading{% endcomment %}
      {% else %}
        <div class='media__lg'>
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
        </div>
        <div class='media__md'>
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
        </div>
      {% endif %}
    </div>
    {% if section.settings.overlay == true %}
