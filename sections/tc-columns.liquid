  .grid.multicolumn-list::-webkit-scrollbar {
    width: 0!important;
    height: 0!important;
  }

  .grid.multicolumn-list::-webkit-scrollbar-track {
    background: transparent;
    height: 0;
  }

  .grid.multicolumn-list::-webkit-scrollbar-thumb {
    background: transparent;
    height: 0;
  }

