    }
  }

  .multicolumn-card__info {
    padding-top: 0;
    padding-bottom: 0;
  }

  {{ sc_id }} li {
    position: relative;
  }

  {{ sc_id }} li .overlay-link {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
