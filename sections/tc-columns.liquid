{% assign sc_id = '#shopify-section-' | append: section.id %}
{%- style -%}
    {{ sc_id }} {
      background-color: {{ section.settings.bg_color }};
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 769px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    @media screen and (min-width: 990px) {
      {{ sc_id }} .multicolumn-list__item.grid__item.text-center  {
        {% if section.settings.enable_borders == true %}
          border-right: 1px solid #212121;
        {% endif %}
        {% if section.settings.enable_borders_around == true %}
          border: 2px solid #212121;
          padding: 1rem;
          padding-bottom: 0;
          border-radius: 1.2rem;
        {% endif %}
      }

      {{ sc_id }} .multicolumn-list__item.grid__item.text-center:last-child  {
        {% unless section.settings.enable_borders_around == true %}
          border-right: 0;
        {% endunless %}
      }
    }

    @media screen and (max-width: 989px) {

      {{ sc_id }} .multicolumn-list__item.grid__item.text-center  {
        {% if section.settings.enable_borders == true %}
        border-bottom: 1px solid #212121;
        {% endif %}
        {% if section.settings.enable_borders_around == true %}
          border: 2px solid #212121;
          padding: 1rem;
          padding-bottom: 0;
          border-radius: 1.2rem;
        {% endif %}
        padding-bottom: 0;
      }

      {{ sc_id }} .multicolumn-list__item.grid__item.text-center:last-child  {
        {% unless section.settings.enable_borders_around == true %}
          border-bottom: 0;
        {% endunless %}
      }
    }

      {{ sc_id }} .multicolumn-card-spacing {
        margin-left: 0;
        margin-right: 0;
      }

      @media screen and (max-width: 768px) {

        {{ sc_id }} .multicolumn-card.content-container {
          overflow: hidden;
        }

        {{ sc_id }} .multicolumn-card-spacing {
          overflow: hidden;
          position: relative;
        }

        {{ sc_id }} .multicolumn-card-spacing > .media.media--adapt {
          padding-bottom: 0;
          aspect-ratio: 4.5/5;
        }

        {{ sc_id }} .multicolumn-card-spacing > .media.media--adapt > img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          aspect-ratio: 3/5;
        }
        {{ sc_id }} .multicolumn-list {
          margin: 0;
          width: 100%;
          padding-left: 0.5rem;
          padding-right: 0.5rem;
        }
      }

    {% if section.settings.swipe_mobile == true %}

      @media screen and (max-width: 768px) {
        {{ sc_id }} .multicolumn-list  {
          display: flex;
          justify-content: flex-start;
          flex-direction: row;
          overflow-x: scroll;
          overflow-y: hidden;
          -webkit-overflow-scrolling: touch;
          scroll-snap-type: x mandatory;
          scroll-behavior: smooth;
          -ms-overflow-style: none;
          scrollbar-width: none;
          flex-wrap: nowrap;
        }

        {{ sc_id }} .content-wrapper {
          padding-left: 0!important;
          padding-right: 0!important;
        }
        {{ sc_id }} .multicolumn-card.content-container {
          display: flex;
          flex-direction: column;
          justify-content: flex-start;
        }
        
        {{ sc_id }} .multicolumn-list__item {
          width: calc(100% - 4vw);
        }
      }

    {% endif %}

      @media screen and (max-width: 989px) {
        {{ sc_id }} .multicolumn-list  {
          display: flex;
          justify-content: flex-start!important;
          flex-direction: row;
          overflow-x: scroll;
          overflow-y: hidden;
          -webkit-overflow-scrolling: touch;
          scroll-snap-type: x mandatory;
          scroll-behavior: smooth;
          -ms-overflow-style: none;
          scrollbar-width: none;
          flex-wrap: nowrap;
        }
      }

    {{ sc_id }} .multicolumn-card__image-wrapper > .media > img + * {
      position: absolute;
      top: unset;
      right: unset;
      bottom: 1rem;
      left: 1rem;
      height: fit-content;
      width: fit-content;
      text-align: left;
    }

    {{ sc_id }} .grid--2-col-tablet-down.grid--5-col-desktop .grid__item {
      max-width: 320px;
    }

    {{ sc_id }} .grid--2-col-tablet-down.grid--3-col-desktop .grid__item {
