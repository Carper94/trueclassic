<div class='multicolumn {% unless section.settings.section_full_width != false %}container{% endunless %}'>
  <div
    class='content-wrapper section-{{ section.id }}-padding'
  >
    <div class='title-wrapper color-chocolate text-{{ section.settings.heading_alignment }}'>
      {%- liquid
        unless section.settings.title == blank
          assign title = section.settings.title | escape
          render 'tc-heading', title: title, heading_level: section.settings.heading_level, heading_font: section.settings.heading_font, heading_size: section.settings.heading_size, heading_color: section.settings.heading_color, heading_color_inverse: section.settings.heading_color_inverse, heading_margin_top: section.settings.heading_margin_top, heading_margin_bottom: section.settings.heading_margin_bottom, heading_underline: section.settings.heading_underline, line_break_dot: section.settings.line_break_dot
        endunless
        unless section.settings.sub_title == blank
          assign paragraph = section.settings.sub_title
          render 'tc-paragraph', text: paragraph, text_font: section.settings.paragraph_font, text_style: section.settings.paragraph_style, text_color: section.settings.paragraph_color, text_color_inverse: section.settings.paragraph_color_inverse, text_margin_top: section.settings.paragraph_margin_top, text_margin_bottom: section.settings.paragraph_margin_bottom
        endunless
      -%}
    </div>
    <div>
      <ul
        class='multicolumn-list grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop flex-{{ section.settings.column_alignment }}'
        role='list'
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.image.aspect_ratio
            endif
          endfor
        -%}
        {%- for block in section.blocks -%}
          {%- assign empty_column = '' -%}
          {%- if block.settings.image == blank
            and block.settings.title == blank
            and block.settings.text == blank
            and block.settings.link_label == blank
          -%}
            {%- assign empty_column = ' multicolumn-list__item--empty' -%}
          {%- endif -%}

          <li
            class='multicolumn-list__item grid__item text-{{ section.settings.content_alignment }} {{ empty_column }}'
            {{ block.shopify_attributes }}
          >
            <div class='multicolumn-card content-container'>
              {%- if block.settings.image != blank -%}
                {% if section.settings.image_ratio == 'adapt'
                  or section.settings.image_ratio == 'circle'
                %}
                  {% assign spaced_image = true %}
                {% endif %}
                <div class='multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}'>
                  <div
                    class='media media--transparent media--{{ section.settings.image_ratio }} {% if section.settings.icons_fit %} icons-fit{% endif %}'
                    {% comment %} style='padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;' {% endcomment %}
                  >
                    {{
                      block.settings.image
                      | image_url: width: block.settings.max_width
                      | image_tag:
                        loading: 'lazy',
                        sizes: '100%',
                        widths: '550, 710, 1420',
                        class: 'multicolumn-card__image'
                    }}
                    {%- if block.settings.title != blank -%}
                      {% render 'tc-heading',
                        title: block.settings.title,
                        heading_level: block.settings.heading_level,
                        heading_font: block.settings.heading_font,
                        heading_size: block.settings.heading_size,
                        heading_color: block.settings.heading_color,
                        heading_color_inverse: block.settings.heading_color_inverse,
                        heading_margin_top: block.settings.heading_margin_top,
                        heading_margin_bottom: block.settings.heading_margin_bottom,
                        heading_underline: block.settings.heading_underline,
                        line_break_dot: block.settings.line_break_dot
                      %}
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
              <div class='multicolumn-card__info'>
                {%- if block.settings.paragraph != blank -%}
                  {% render 'tc-paragraph',
                    text: block.settings.paragraph,
                    text_font: block.settings.paragraph_font,
                    text_style: block.settings.paragraph_style,
                    text_color: block.settings.paragraph_color,
                    text_color_inverse: block.settings.paragraph_color_inverse,
                    text_margin_top: block.settings.paragraph_margin_top,
                    text_margin_bottom: block.settings.paragraph_margin_bottom
                  %}
                {%- endif -%}
                {%- if block.settings.link_text != blank and block.settings.link_url != blank -%}
                  {% render 'tc-link',
                    link_text: block.settings.link_text,
                    link_url: block.settings.link_url,
                    new_tab: block.settings.new_tab,
                    link_classes: block.settings.link_style,
                    link_color_inverse: block.settings.link_color_inverse,
                    icon: block.settings.link_icon,
                    link_margin_top: block.settings.link_margin_top,
                    link_margin_bottom: block.settings.link_margin_bottom,
                    full_width: block.settings.full_width,
                    disabled: block.settings.disabled
                  %}
                {%- endif -%}
              </div>
            </div>
            {% unless block.settings.block_url == blank %}
              <a href='{{ block.settings.block_url }}' class='overlay-link'></a>
            {% endunless %}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>

