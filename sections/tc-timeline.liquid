{% comment %} STYLES {% endcomment %}

<style type='text/css'>
  {{ sc_id }} {
    padding-top: {{ section.settings.padding_top | times: 0.50 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 }}px;
  }

  @media screen and (min-width: 769px) {
    {{ sc_id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .tc-timeline {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    position: relative;
    z-index: 2;
  }

  .timeline-line {
    position: relative;
    width: 2px;
    min-height: calc(((28px + 4vh) * {{ section.blocks | size }}) - 5.5vh);
  }

  .timeline-line::before {
    content: '';
    position: absolute;
    top: 0;
    left: calc(50% - 1px);
    width: 2px;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    z-index: -1;
  }

  .timeline-line::after {
    content: '';
    position: absolute;
    top: 0;
    left: calc(50% - 1px);
    width: 2px;
    height: calc(100% * var(--scroll-percent, 0));
    background: rgba(255, 255, 255, 0.5);
    z-index: -1;
  }

  .timeline {
    position: sticky;
    top: 50%;
    width: 0;
    padding: 0;
    left: 10px;
    -webkit-transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
  }

  .timeline > ul {
    list-style: none;
    margin: 0;
    padding: 0;
    padding-left: 5px;
    position: absolute;
    top: 0;
    width: 70px;
    color: white;
  }

  .timeline > ul > li {
    margin: 4vh 0;
  }

  .timeline > ul > li:first-child {
    margin: 0 0 4vh 0;
  }

  .timeline > ul > li:last-child {
    margin: 4vh
     0 0 0;
  }

  .timeline .year > * {
    font-weight: bold;
    opacity: 0.3;
  }

  .timeline-content {
    flex: 1 1 auto;
  }

   @media screen and (min-width: 768px) {
    .milestone:nth-child(odd) {
      flex-direction: row;
    }
    .milestone:nth-child(even) {
      flex-direction: row-reverse;
    }
  }
     @media screen and (max-width: 560px) {
    .milestone .timeline-item__media {
      margin-bottom: 20px;
    }
  }
  @media (min-width: var(--media-medium)) {
    .timeline-item > * {
      width: 50%;
    }
  }

  @media (max-width: 560px) {
    .timeline-content {
      padding-left: 60px;
      background-color: var(--brand-chocolate);
    }
  }

  .timeline-item img {
    height: auto;
    min-width: 100%;
  }

  @media screen and (min-width: 769px){
    .timeline-item-content__inner {
      padding: 4.75rem;
    }
  }
  @media screen and (max-width: 769px){
    .timeline-item {
      flex-direction: column;
    }
  }
  @media screen and (max-width: 560px){
    .rt-timeline {
      margin: 0;
    }
    .tc-rich-text__blocks {
      text-align: left!important;
      padding-left: 1rem;
    }
  }
</style>

