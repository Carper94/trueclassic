{% schema %}
{
  "name": "Free Shipping Threshold",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "text",
      "id": "satisfaction_text",
      "label": "Satisfaction text",
      "default": "100% Satisfaction Guarantee"
    },
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Shipping text",
      "default": "Free  &amp; Easy Returns"
    }
  ],
  "blocks": [
    {
      "type": "shipping",
      "name": "Shipping Threshold",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "US, CA, AU, GB etc."
        },
        {
          "type": "number",
          "id": "shipping_threshold",
          "label": "Threshold Price"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Free Shipping Threshold"
    }
  ]
}
{% endschema %}
