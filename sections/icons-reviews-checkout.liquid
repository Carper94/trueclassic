<script type='text/javascript'>
  window.addEventListener('DOMContentLoaded', function () {
    const valuePropsTestimonials = document.getElementById('value-props-testimonials');
    const isMobile = window.innerWidth < 1000;
    let targetElement;
    let className;

    if (isMobile) {
      className = 'mobile-only-box';
      targetElement = document.querySelector('.step__footer');
    } else {
      className = 'desktop-only-box';
      if (Shopify.Checkout.step == 'contact_information') {
        targetElement = document.querySelector('.GiftNote');
      } else if (Shopify.Checkout.step == 'shipping_method') {
        targetElement = document.querySelector(
          '.order-summary__section.order-summary__section--total-lines'
        );
      } else if (Shopify.Checkout.step == 'payment_method') {
        targetElement = document.querySelector(
          '.order-summary__section.order-summary__section--total-lines'
        );
      } else if (Shopify.Checkout.step == 'review') {
        targetElement = document.querySelector('.GiftNote');
      }
    }

    if (isMobile) {
      if (targetElement) {
        targetElement.insertAdjacentElement('afterend', valuePropsTestimonials);
        valuePropsTestimonials.classList.remove('hidden');
        valuePropsTestimonials.classList.add(className);
      }
      valuePropsTestimonials.classList.remove('desktop-only-box');
    } else {
      if (targetElement) {
        targetElement.insertAdjacentElement('afterend', valuePropsTestimonials);
        valuePropsTestimonials.classList.remove('hidden');
        valuePropsTestimonials.classList.add(className);
      }
      valuePropsTestimonials.classList.remove('mobile-only-box');
    }
  });
</script>

