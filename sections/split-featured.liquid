          border-right: 0;
        {% endunless %}
      }
    }

    @media screen and (max-width: 989px) {
      {{ sc_id }} .split-list-list__item.grid__item.text-center  {
        {% if section.settings.enable_borders == true %}
        border-bottom: 1px solid #212121;
        {% endif %}
        {% if section.settings.enable_borders_around == true %}
