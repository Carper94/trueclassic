<div class='split-list container'>
  <div
    class='content-wrapper section-{{ section.id }}-padding'
    style=''
  >
    {%- unless section.settings.title == blank -%}
      <div class='title-wrapper'>
        <h2 class='columns-title title text-{{ section.settings.heading_alignment }} {{ section.settings.heading_size }}'>
          {{ section.settings.title | escape }}
        </h2>
        {%- unless section.settings.sub_title == blank -%}
          <br>
          <p class='columns-subtitle text-{{ section.settings.heading_alignment }}'>
            {{ section.settings.sub_title }}
          </p>
        {%- endunless -%}
      </div>
    {%- endunless -%}
    <div class='desktop-grid'>
      <div class='split-list-image'>
        {%- liquid
          assign image_desktop_height = section.settings.section_image.width | divided_by: section.settings.section_image.aspect_ratio
          assign image_desktop_class = 'motion-reduce desktop-image'
          assign sizes_desktop = '50vw'
          assign loading = 'lazy'
        -%}
        {{
          section.settings.section_image
          | image_url: width: 1500
          | image_tag:
            width: section.settings.section_image.width,
            height: image_desktop_height,
            class: image_desktop_class,
            sizes: sizes_desktop,
            loading: loading,
            widths: '165, 265, 360, 535, 750, 1070, 1500, 1780, 2000, 3000',
            alt: section.settings.section_image.alt
          | escape
        }}
      </div>

      <ul
        class='split-list-list grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop flex-{{ section.settings.column_alignment }}'
        role='list'
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.image.aspect_ratio
            endif
          endfor
        -%}
        {%- for block in section.blocks -%}
          {%- assign empty_column = '' -%}
          {%- if block.settings.image == blank
            and block.settings.title == blank
            and block.settings.text == blank
            and block.settings.link_label == blank
          -%}
            {%- assign empty_column = ' split-list-list__item--empty' -%}
          {%- endif -%}

          <li
            class='split-list-list__item text-{{ section.settings.content_alignment }} {{ empty_column }}'
            {{ block.shopify_attributes }}
          >
            <div class='split-list-card content-container grid grid--2-col-desktop'>
              {%- if block.settings.image != blank -%}
                {% if section.settings.image_ratio == 'adapt'
                  or section.settings.image_ratio == 'circle'
                %}
                  {% assign spaced_image = true %}
                {% endif %}
                <div class='split-list-card__image-wrapper split-list-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} split-list-card-spacing{% endif %}'>
                  <div
                    class='media media--transparent media--{{ section.settings.image_ratio }}'
                    {% comment %} style='padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;' {% endcomment %}
                  >
                    {%- capture sizes -%}(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %}, (min-width: 769px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %}, calc(100vw - 30px){%- endcapture -%}
                    {{
                      block.settings.image
                      | image_url: width: 1420
                      | image_tag:
                        loading: 'lazy',
                        sizes: sizes,
                        widths: '275, 550, 710, 1420',
                        class: 'split-list-card__image'
                    }}
                  </div>
                </div>
              {%- endif -%}
              {%- if block.settings.title != blank and block.settings.text != blank -%}
                <div class='split-list-card__info'>
                  {%- if block.settings.title != blank -%}
                    <h3>{{ block.settings.title | escape }}</h3>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <div class='rte'>{{ block.settings.text }}</div>
                  {%- endif -%}
                  {%- if block.settings.link_label != blank -%}
                    <a
                      class='link animate-arrow'
                      {% if block.settings.link == blank %}
                        role='link' aria-disabled='true'
                      {% else %}
                        href='{{ block.settings.link }}'
                      {% endif %}
                    >
                      {{- block.settings.link_label | escape -}}
                      <span class='icon-wrap'>&nbsp;{% render 'icon-arrow' %}</span></a
                    >
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>

