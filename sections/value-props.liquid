<div class="container">
  <div class="content-wrapper section-spacer">
    <div class="value-prop-wrapper">
      {% for block in section.blocks %}
        {% liquid
            assign image = block.settings.image
            assign heading = block.settings.heading
            assign description = block.settings.description
        %}
        <div class="value-prop-container">
          {% if image != blank %}
            <div class="value-prop-img-container">
              <img
                src="{{ block.settings.image | image_url }}"
                alt="{{ block.settings.image.alt }}"
                loading="lazy"
                height="{{ block.settings.image.height }}"
                width="{{ block.settings.image.width }}"
              >
            </div>
          {% endif %}
          <div class="value-prop-content-container">
            {% if heading != blank %}
              <p class="value-prop-heading">
                {{ heading }}
              </p>
            {% endif %}
            {% if description != blank %}
              <p class="value-prop-description">
                {{ description }}
              </p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Value Props",
  "tag": "section",
  "class": "value-prop-section",
  "blocks": [
    {
      "name": "Value Prop",
      "type": "text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Value Props",
      "category": "text"
    }
  ]
}
{% endschema %}