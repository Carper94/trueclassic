{%- style -%}
  .section-{{ section.id }}-spacing {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-spacing {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class='section-map container section-{{ section.id }}-spacing'>
  <div class='content-wrapper'>
    {{ section.settings.html }}
  </div>
</div>

{% schema %}
{
  "name": "Section Map",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "html",
      "id": "html",
      "label": "Add Embed Map"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Section Map"
    }
  ]
}
{% endschema %}
