        assign show_section = true
      else
        assign is_excluded = false
        for exclude_code in exclude_country_codes
          if localization.country.iso_code == exclude_code
            assign is_excluded = true
            break
          endif
        endfor

        unless is_excluded
          if section.settings.country_code == ''
            assign show_section = true
          else
