{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class='container section-{{ section.id }}-padding'>
  <div
    {% unless section.settings.full_width == true %}
      class='content-wrapper'
    {% endunless %}
  >
    {%- if section.settings.hide_title != true -%}
      <h1 class='headline h2 color-black'>
        {{ page.title | escape }}
      </h1>
    {%- endif -%}
    <div class='rte'>
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Make page content full width",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_title",
      "label": "Hide title",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ]
}
{% endschema %}
