{% comment %} /snippets/social-sharing.liquid {% endcomment %}
<div class='social-sharing'>
  {% if settings.share_facebook %}
    <a
      target='_blank'
      title='{{ share_title }}'
      href='//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}'
    >
      {% render 'icon-facebook' %}
      <span class='visually-hidden'>{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a
      target='_blank'
      title='{{ share_title }}'
      href='//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}'
    >
      {% render 'icon-twitter' %}
      <span class='visually-hidden'>{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a
      target='_blank'
      title='{{ share_title }}'
      href='//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | image_url: width: 1024, height: 1024 }}&amp;description={{ share_title | url_param_escape }}'
    >
      {% render 'icon-pinterest' %}
      <span class='visually-hidden'>{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_tumblr %}
    <a
      target='_blank'
      title='{{ share_title }}'
      href='//www.tumblr.com/share/link?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | image_url: width: 1024, height: 1024 }}&amp;description={{ share_title | url_param_escape }}'
    >
      {% render 'icon-tumblr' %}
      <span class='visually-hidden'>{{ 'general.social.alt_text.share_on_tumblr' | t }}</span>
    </a>
  {% endif %}
</div>
